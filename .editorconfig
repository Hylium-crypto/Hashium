# EditorConfig - https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ files
[*.{c,cc,cpp,cxx,h,hh,hpp,hxx}]
indent_size = 4

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# CMake
[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

# Python
[*.py]
indent_size = 4
